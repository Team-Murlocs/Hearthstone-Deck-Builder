    "@angular/upgrade": "~2.0.1",
    "angular-in-memory-web-api": "~0.1.1",
    "awesome-typescript-loader": "^3.0.0-beta.17",
    "body-parser": "^1.15.2",
    "bootstrap": "^3.3.7",
    "bower": "^1.8.0",
    "core-js": "^2.4.1",
    "ejs": "^2.5.5",
    "express": "^4.14.0",
    "extract-text-webpack-plugin": "^1.0.1",
    "html-webpack-plugin": "^2.24.1",
